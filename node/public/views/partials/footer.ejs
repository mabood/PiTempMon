<script type="text/javascript">

    function fetchCurrentStat(statId) {
        return $.ajax({
            type: "GET",
            url: "/current-data?id=" + statId,
            async: false
        }).responseText;
    }

    function updatePageCurrentStats() {

        var s_tempf = fetchCurrentStat('s_tempf');
        var w_tempf = fetchCurrentStat('w_tempf');
        var date = fetchCurrentStat('date');
        var time = fetchCurrentStat('time');
        var w_location = fetchCurrentStat('w_location');

        $("#current-s-tempf").text(s_tempf);
        $("#current-w-tempf").text(w_tempf);
        $("#current-date").text(date);
        $("#current-time").text(time);
        $("#current-location-text").text(w_location);

        drawChart();
    }

    setInterval(updatePageCurrentStats, 60*1000);
</script>
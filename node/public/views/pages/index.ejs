<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <% include ../partials/gchart.ejs%>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron" style="background-color: #333;">

            <table style="border-spacing: 100px;">
                <col width="400">
                <col width="400">
                <tr>
                    <td>
                        <h1 style="color:#00ff99;"><%= current_sensor %></h1>
                        <h3>Room Temperature</h3>
                    </td>
                    <td>
                        <h1 style="color:#5f42f4;"><%= current_weather %></h1>
                        <h3>Outside Temperature</h3>
                    </td>
                </tr>

            </table>

            <p style="color:#777;">Measured at <%= current_time %>, in <%= weather_local%></p>

        </div>

        <ul class="nav nav-tabs">
            <li class="active"><a href="#" data-toggle="tab">12-hour</a></li>
            <li><a href="#" data-toggle="tab">24-hour</a></li>
            <li><a href="#" data-toggle="tab">2-day</a></li>
            <li><a href="#" data-toggle="tab">5-day</a></li>
            <li><a href="#" data-toggle="tab">10-day</a></li>
        </ul>

        <div class="panel panel-default">
            <div class="panel-body">
                Temperature data from the last 12 hours
            </div>
            <div class="panel-footer">
                <div id="curve_chart" style="width: auto; height: 600px"></div>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>